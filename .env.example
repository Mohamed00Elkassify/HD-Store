# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=0
ALLOWED_HOSTS=your-app.railway.app,your-domain.com

# Database (Railway will auto-set DATABASE_URL)
# DATABASE_URL=postgresql://...

# ERPNext Integration
ERPNEXT_BASE_URL=https://your-erpnext-instance.com
ERPNEXT_API_KEY=your_api_key
ERPNEXT_API_SECRET=your_api_secret
ERPNEXT_TIMEOUT_SECONDS=15
ERPNEXT_DEFAULT_CUSTOMER=Online Customer
ERPNEXT_DEFAULT_CUSTOMER_GROUP=All Customer Groups
ERPNEXT_DEFAULT_TERRITORY=All Territories
ERPNEXT_DEFAULT_WAREHOUSE=Your Warehouse Name
ERPNEXT_WEBHOOK_SECRET=your-webhook-secret-here

# WhatsApp Integration (Optional)
WHATSAPP_AUTOMATION_ENABLED=0
WHATSAPP_DEFAULT_COUNTRY_CODE=+20
WASENDER_API_KEY=your_wasender_api_key
WHATSAPP_WELCOME_TEMPLATE=Hi {name}, your order {order_no} is received. We will contact you soon. Thank you for choosing HD Store.

# Cache Settings
CATALOG_CACHE_SECONDS=300
STOCK_CACHE_SECONDS=30

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
